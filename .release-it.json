{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "requireBranch": ["master", "develop"],
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "commit": true,
    "tag": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["echo 'ðŸš€ Iniciando processo de release...'"],
    "after:bump": [
      "node -e \"const fs = require('fs'); const pkg = JSON.parse(fs.readFileSync('./projects/fupu-library-test/package.json', 'utf8')); pkg.version = '${version}'; fs.writeFileSync('./projects/fupu-library-test/package.json', JSON.stringify(pkg, null, 2) + '\\n');\"",
      "ng build fupu-library-test --configuration production",
      "echo 'ðŸ“¦ VersÃ£o ${version} gerada com sucesso!'"
    ],
    "after:release": [
      "echo 'ðŸŽ‰ Release v${version} completada com sucesso!'",
      "echo 'ðŸ“¤ Publicando no npm...'",
      "cd dist/fupu-library-test && npm publish --userconfig ../../.npmrc",
      "echo 'âœ… Pacote publicado com sucesso!'"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "projects/fupu-library-test/CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "writerOpts": {
        "groupBy": "type",
        "commitGroupsSort": ["feat", "fix", "perf", "chore", "refactor"],
        "commitsSort": ["scope", "subject"],
        "noteGroupsSort": "title",
        "mainTemplate": "\n## {{version}}{{#if date}} ({{date}}){{/if}}\n\n{{#each commitGroups}}\n### {{title}}\n{{#each commits}}\n* {{#if scope}}**{{scope}}:** {{/if}}{{subject}}\n{{/each}}\n{{/each}}\n"
      }
    }
  },
  "github": {
    "release": false
  }
}
